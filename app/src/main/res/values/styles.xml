<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/colorGrounding</item>
        <item name="android:listDivider">@drawable/bg_list_divider</item>
    </style>

    <style name="AppBaseTheme.Translucent" />

    <style name="AppBaseTheme.Translucent.StateBar" />

    <!-- 启动界面style -->
    <style name="AppBaseTheme.Launcher" parent="AppBaseTheme.Translucent">
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme.Translucent.StateBar">
        <!--  -->
    </style>

    <style name="ToolbarMenu">
        <item name="android:background">?attr/actionBarItemBackground</item>
        <item name="android:minWidth">36dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">center</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <!-- 如果界面需要侧滑必须设置这个主题 -->
    <style name="AppTheme.Slide">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <style name="AppTheme.NoWindowBackground">
        <item name="android:windowBackground">@null</item>
    </style>


    <style name="Widget.MaterialProgressBar.ProgressBar.LoadMore">
        <item name="android:minWidth">32dp</item>
        <item name="android:maxWidth">32dp</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:maxHeight">32dp</item>
    </style>

</resources>
