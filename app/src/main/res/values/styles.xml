<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/colorGrounding</item>
        <item name="android:listDivider">@drawable/bg_list_divider</item>
    </style>

    <style name="AppBaseTheme.Translucent"/>

    <style name="AppBaseTheme.Translucent.StateBar"/>

    <!-- 启动界面style -->
    <style name="AppBaseTheme.Launcher" parent="AppBaseTheme.Translucent">
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <!--  -->
    </style>

    <style name="ToolbarMenu">
        <item name="android:background">?attr/actionBarItemBackground</item>
        <item name="android:minWidth">36dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">center</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <!-- 如果界面需要侧滑必须设置这个主题 -->
    <style name="AppTheme.Slide">
        <!--<item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>-->
    </style>

    <style name="AppTheme.Translucent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>

    </style>


    <style name="AppTheme.NoWindowBackground">
        <item name="android:windowBackground">@null</item>
    </style>


    <style name="Widget.MaterialProgressBar.ProgressBar.LoadMore">
        <item name="android:minWidth">32dp</item>
        <item name="android:maxWidth">32dp</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:maxHeight">32dp</item>
    </style>

    <style name="NoActivityAnimation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>

    <style name="AppTheme.Slide.NoActivityAnimation">
        <item name="android:windowAnimationStyle">@style/NoActivityAnimation</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="LoadingProgressBar" parent="Widget.MaterialProgressBar.ProgressBar">
        <item name="android:minWidth">20dp</item>
        <item name="android:maxWidth">20dp</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">20dp</item>
    </style>

    <style name="NB.Theme" parent="AppTheme"/>

    <style name="NB.Theme.TextAppearance"/>

    <style name="NB.Theme.TextAppearance.Read"/>

    <style name="NB.Theme.TextAppearance.Read.TopMenu">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/nb.read.menu.text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NB.Theme.TextAppearance.Read.BottomMenu">
        <item name="android:textColor">@color/nb.read.menu.text</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Read"/>

    <style name="Read.BottomMenu">
        <item name="android:textColor">@color/read_menu_text</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Read.BottomMenu.IconButton">
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:layout_width">68dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Read.BottomMenu.Button">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10.0dp</item>
        <item name="android:paddingRight">10.0dp</item>
        <item name="android:paddingTop">18.0dp</item>
        <item name="android:paddingBottom">18.0dp</item>
    </style>


    <style name="NB.Theme.TextAppearance.Read.BottomMenu.Button"
           parent="NB.Theme.TextAppearance.Read.BottomMenu">
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:layout_width">68dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <style name="NB.Theme.TextAppearance.File"/>

    <style name="NB.Theme.TextAppearance.File.Tag">
        <item name="android:layout_width">38dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
