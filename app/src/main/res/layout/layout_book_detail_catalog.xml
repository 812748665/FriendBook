<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_book_detail_catalog"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@drawable/bg_list_item"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/space_ground_horizontal"
    android:paddingRight="@dimen/space_ground_horizontal">

    <TextView
        android:id="@+id/tv_catalog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/textPrimary"
        android:textSize="@dimen/text_size_medium"
        android:text="最新章节：第134章 我爱搞事情" />


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_catalog_arrow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_vector_small_arrow_right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/iv_catalog_arrow"
        android:text="5小时前更新"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_size_small" />


</RelativeLayout>