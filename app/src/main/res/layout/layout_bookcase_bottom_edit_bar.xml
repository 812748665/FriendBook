<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/BottomNavigation.GroupView"
    android:background="@color/white">

    <FrameLayout
        android:id="@+id/bottom_item_book_share"
        style="@style/BottomNavigation.ItemView">

        <android.support.v7.widget.AppCompatImageView
            style="@style/BottomNavigation.ItemView.Icon"
            app:srcCompat="@drawable/ic_vector_bookcase_share" />

        <TextView
            style="@style/BottomNavigation.ItemView.Title"
            android:text="@string/share"
            android:textColor="@color/textPrimary" />

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/bottom_item_select_all"
        style="@style/BottomNavigation.ItemView">

        <android.support.v7.widget.AppCompatImageView

            style="@style/BottomNavigation.ItemView.Icon"
            app:srcCompat="@drawable/ic_vector_bookcase_select_all" />

        <TextView
            style="@style/BottomNavigation.ItemView.Title"
            android:text="@string/select_all"
            android:textColor="@color/textPrimary" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_item_delete"
        style="@style/BottomNavigation.ItemView">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_bottom_item_delete"
            style="@style/BottomNavigation.ItemView.Icon"
            app:srcCompat="@drawable/ic_vector_bookcase_delete" />

        <TextView
            style="@style/BottomNavigation.ItemView.Title"
            android:text="@string/delete"
            android:textColor="@color/textPrimary" />

        <com.youshibi.app.ui.widget.ShapeTextView
            android:id="@+id/tv_selected_count"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginLeft="-8dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/iv_bottom_item_delete"
            android:gravity="center"
            android:minWidth="16dp"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_micro"
            app:super_cornerRadius="50dp"
            app:super_solidColor="@color/colorAccent" />

    </RelativeLayout>


    <FrameLayout
        android:id="@+id/bottom_item_book_details"
        style="@style/BottomNavigation.ItemView">

        <android.support.v7.widget.AppCompatImageView
            style="@style/BottomNavigation.ItemView.Icon"
            app:srcCompat="@drawable/ic_vector_bookcase_details" />

        <TextView
            style="@style/BottomNavigation.ItemView.Title"
            android:text="@string/details"
            android:textColor="@color/textPrimary" />

    </FrameLayout>


</LinearLayout>